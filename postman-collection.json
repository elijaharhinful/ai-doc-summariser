{
  "info": {
    "name": "AI Document Summarizer API",
    "description": "Collection for testing the AI Document Summarizer API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Documents",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/documents/upload",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "upload"]
            },
            "description": "Upload a PDF document for text extraction and storage"
          },
          "response": []
        },
        {
          "name": "Analyze Document",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/analyze",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "analyze"]
            },
            "description": "Analyze a document using AI to extract summary, type, and metadata"
          },
          "response": []
        },
        {
          "name": "Get Document",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}"]
            },
            "description": "Retrieve complete document information including analysis results"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "documentId",
      "value": "",
      "type": "string"
    }
  ]
}
